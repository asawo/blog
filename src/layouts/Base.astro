---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <title>{title}</title>
    <script is:inline>
      const theme = localStorage.getItem('theme');
      if (theme) document.documentElement.style.colorScheme = theme;
    </script>
  </head>
  <body>
    <nav>
      <a href={`${import.meta.env.BASE_URL}`}><span class="prompt">&gt;</span> blog</a>
      <button class="theme-toggle" type="button" aria-label="Toggle theme"></button>
    </nav>
    <script is:inline>
      (function () {
        const btn = document.querySelector('.theme-toggle');

        function effective() {
          return localStorage.getItem('theme')
            || (matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        }

        function apply(theme) {
          document.documentElement.style.colorScheme = theme;
          btn.textContent = theme === 'dark' ? '\u2600' : '\u263D';
          btn.setAttribute('aria-label',
            theme === 'dark' ? 'Switch to light mode' : 'Switch to dark mode');
        }

        apply(effective());

        btn.addEventListener('click', function () {
          var next = effective() === 'dark' ? 'light' : 'dark';
          localStorage.setItem('theme', next);
          apply(next);
        });
      })();
    </script>
    <main>
      <slot />
    </main>
    <footer>
      <span class="prompt">&gt;</span> &copy; {new Date().getFullYear()} asawo
    </footer>
  </body>
</html>
