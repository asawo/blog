---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <a href={`${import.meta.env.BASE_URL}`}>Blog</a>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      &copy; {new Date().getFullYear()}
    </footer>
  </body>
</html>
