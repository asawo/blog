---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light dark" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <title>{title}</title>
    <script is:inline>
      const theme = localStorage.getItem('theme');
      if (theme) document.documentElement.style.colorScheme = theme;
    </script>
  </head>
  <body>
    <nav>
      <span class="nav-path"><span class="prompt">&gt;</span> ~/<a href="https://asawo.github.io">asawo</a>/<a href={`${import.meta.env.BASE_URL}`}>blog</a></span>
      <button class="theme-toggle" type="button" aria-label="Toggle theme"></button>
    </nav>
    <script is:inline>
      (function () {
        const btn = document.querySelector('.theme-toggle');

        function effective() {
          return localStorage.getItem('theme')
            || (matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        }

        function apply(theme) {
          document.documentElement.style.colorScheme = theme;
          btn.innerHTML = '<span>' + (theme === 'dark' ? '\u2600' : '\u263D') + '</span>';
          btn.setAttribute('aria-label',
            theme === 'dark' ? 'Switch to light mode' : 'Switch to dark mode');
        }

        apply(effective());

        // When navigating back, check the theme persists
        window.addEventListener('pageshow', function (e) {
          if (e.persisted) apply(effective());
        });

        btn.addEventListener('click', function () {
          const next = effective() === 'dark' ? 'light' : 'dark';
          document.documentElement.classList.add('theme-transitioning');
          localStorage.setItem('theme', next);
          apply(next);
          setTimeout(function () {
            document.documentElement.classList.remove('theme-transitioning');
          }, 300);
        });
      })();
    </script>
    <main>
      <slot />
    </main>
    <footer>
      <span class="prompt">&gt;</span> &copy; {new Date().getFullYear()} <a href={"https://github.com/asawo"}>asawo</a>
    </footer>
  </body>
</html>
