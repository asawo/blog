---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Base title="blog">
  <section class="intro">
    <h1><span class="prompt">&gt;</span> posts</h1>
    <p class="description">learning notes, saved to disc</p> 
  </section>
  <ul class="post-list">
    {posts.map((post) => (
      <li>
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toISOString().slice(0, 10)}
        </time>
        <a href={`${import.meta.env.BASE_URL}/posts/${post.id}/`}>{post.data.title}</a>
      </li>
    ))}
  </ul>
</Base>

<style>

  .intro {
    margin-bottom: 2rem;
  }

  .description {
    color: var(--color-text-muted);
  }

  .post-list {
    list-style: none;
    padding: 0;
  }

  .post-list li {
    display: flex;
    align-items: baseline;
    gap: 1.5ch;
    padding: 0.35rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .post-list li:last-child {
    border-bottom: none;
  }

  .post-list time {
    flex-shrink: 0;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .post-list a {
    font-weight: 700;
  }
</style>
